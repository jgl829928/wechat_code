.mainTop{
    position: fixed;
    width: 100%;
    height: 10%;
    top: 25rpx;
    left: 0;
    background: white;
    z-index: 3;
     /* border: 1px solid red;   */
}
.mainTop .top{
    display: flex;
    width: 90%;
    height: 70rpx;
    margin: auto;
}
.mainTop .serach{
    width: 90%;
    height: 70rpx;
    margin: auto;
    border: 1px solid #EFEFEF;
    background:  #EFEFEF;
    border-radius: 25px;
    
}
.mainTop .serach image{
    width: 40rpx;
    height: 40rpx;
    position: relative;
    top:15rpx;
    left: 20rpx;
    float: left;
}
.mainTop .serach input{
    width: 85%;
    height: 70rpx;
    /* display: inline-block; */
    float: left;
    margin-left: 15px;
    font-size: 0.8rem;
    /* background: white; */
}

.mainTop .returnBtn{
    display: inline-block;
    width: 15%;
    height: 70rpx;
    margin-left: 2%;
    line-height: 70rpx;
    text-align: center;
    background:#FF7623;
    color: white;
    border-radius: 5px;
    font-size: 1em;
}
.mainTop .historyList{
    width: 90%;
    padding: 20rpx 5%;
    margin-top: 20rpx;
    border-top: 1px solid #E5E4E4; 
    border-bottom: 1px solid #E5E4E4; 
    position: absolute; 
    background:white;

}
.mainTop .historyList .historyListTop{
    /* display: flex; */
     padding: 0 10rpx 20rpx; 
    font-size: 1em;
}
.mainTop .historyList .historyListTop .empty{
    float: right;
    color: #FF7623;
}
.mainTop .historyList .historyContent{
    /* border:1px solid red; */
    padding: 0 10px;
}
.mainTop .historyList .historyContent text{
    display: block;
    padding: 5px 10px;
    /* background: #E7E7E7; */
    font-size: 14px;
    margin-right: 10px;
    border-radius: 5px;
    /* margin-top: 10px; */
    color: #FF7623;
}
.content .storeList{
    width:100%;
    margin-top: 15px;
    position: fixed;
    top: 105rpx;
    height: 87%;
    left: 0;
    z-index: 2;
    padding-bottom:100rpx;
}
.content .storeList .default{
    font-size: 1em;
    position: relative;
    top: 30px;
    left: 30px;
    color: #777
}
.content .store{
    border-bottom: 1px solid #E5E5E5;
    padding: 15px;
    overflow: hidden;
    position: relative;
     /* height: 150rpx;  */
    /* position: relative;  
    display: flex;  
    flex-direction: column;   */
}
.content .store .storeLeft{
    width: 37%;
    float: left;
}
.content .store .storeLeft image{
    width:260rpx;
    height:160rpx;
}
.content .store .storeRight{
    width: 58%;
    float: left;
    text-align: left;
    margin-left: 5%;
    /* position: relative; */
}
.content .store .storeRight .name{
    color: #666;
    font-size: 1em;
    width:100%;
    display:block;
    font-family: PingFangSC-Medium;

}
.content .store .storeRight .call{
    color: #FF7623;
    font-size: .8em;
     margin-top: 10rpx; 
    display: flex;
    padding: 10rpx 0;
}
.content .store .storeRight .call text{
    color: #FF7623;
}
.content .store .storeRight .call image{
    width: 30rpx;
    position: relative;
    top: 5rpx;
    margin-right: 5rpx;
}
.content .store .storeRight .address{
    /* display: inline-block; */
    margin-top: 8rpx;
    color: #B2B2B2;
    font-size: .8em;
    line-height:normal;
}
.content .store .storeRight .pay{
    text-align: right;
    float:right;
    position: absolute;
    bottom:25rpx;
    right:30rpx;
     /* margin-top: -15px;  */
}
.content .store .storeRight .pay .payText{
    display: inline-block;
    width: 180rpx;
    height: 55rpx;
    line-height: 55rpx;
    color: white;
    font-size: 1em;
    border-radius: 6rpx;
    text-align: center;
    margin-top:7rpx;
    background: #FF7623;
    background-image: -webkit-linear-gradient(top left, #FB9D47, #FF7623)
}