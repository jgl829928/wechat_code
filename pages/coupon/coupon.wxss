page{
    background: #F6F6F6
}
.main{
    width: 100%;
    height: 100%;
}
.top{
    background: white;
    height: 87rpx;
    width: 100%;
    text-align: center;
    font-size: .8em;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 3;
    box-shadow:0px 0px 6rpx #ccc;
}
.top view{
    display: inline-block;
    width: 50%;
    height: 100rpx;
    line-height: 100rpx;
}
.top view text{
    display: inline-block;
    height: 75rpx;
    line-height: 75rpx;
    color: #666;
    font-size:34rpx;
}
.top view text.active{
    color: #FF7623;
    border-bottom: 5rpx solid #FF7623;
}
.unused,.lose{
    width: 90%;
    margin: auto;
    padding: 30rpx 0;
    margin-top: 10%;
    height: 90%;
    /* border: 1px solid red; */
}
.mainChunk{
    width: 100%;
    /* border: 1px solid red; */
    position: relative;
    height: 190rpx;
    overflow: hidden;
    margin-top: 30rpx;
}
.mainChunk .couponImg{
    width: 100%;
    position: absolute;
    left: 0;
    top: 0;
    z-index: -1;
}
.mainChunk .typeImg{
    position: absolute;
    right: -15rpx;
    top: -15rpx;
    width: 100rpx;
}
.mainChunk .left{
    float: left;
    height: 110rpx;
    /* border: 1px solid red; */
    margin-top: 40rpx;
    margin-left: 5%;
    width: 63%;
    font-size: .8em;
    color: #555;
}
.mainChunk .left view{
    width: 100%;
}
.mainChunk .right{
    float: right;
    /* border: 1px solid red; */
    margin-right:2%;
    margin-top: 80rpx;
    color: #FF7623;
    width: 25%;
}
.mainChunk .right text{
    font-size: 1.1em;
    font-weight: bold;
    display: inline-block;
    width: 70%;
    color:#FF7623;
}
.lose .mainChunk .left{
    color: #9B9B9B
}
.lose .mainChunk .right{
    color: #9B9B9B
}
.lose .mainChunk .right text{
    color: #9B9B9B
}
.noCoupon{
    text-align: center;
    font-size:0.7em;
    color:#C6C5C6;
    margin-top:200rpx;
}
.noCoupon view{
    color:#C6C5C6;
    font-size:1.2em;
}
.noCoupon .defaultCoupon{
    width:316rpx;
    height:206rpx;
    margin-bottom: 20rpx
}